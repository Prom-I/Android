<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- UNSELECTED -->
    <item android:state_checked="false">
        <layer-list>
            <item
                android:drawable="@drawable/palette_unselect_img"
                android:gravity="center"
                android:width="24dp"
                android:height="24dp"/>
        </layer-list>
    </item>
    <!-- SELECTED -->
    <item android:state_checked="true">
        <layer-list>
            <item
                android:drawable="@drawable/palette_selected_img"
                android:gravity="center"
                android:width="24dp"
                android:height="24dp"/>
        </layer-list>
    </item>
</selector>