<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="345dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_edit">

    <TextView
        android:id="@+id/tv_promise_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9:00~10:00"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"/>

    <TextView
        android:id="@+id/tv_able_friend_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가능한 친구"
        android:textStyle="bold"
        android:textSize="12dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/tv_promise_time"
        app:layout_constraintTop_toBottomOf="@id/tv_promise_time"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tv_able_friend_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tv_able_friend_title"
        app:layout_constraintTop_toTopOf="@id/tv_able_friend_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_able_friend_title"
        android:layout_marginStart="4dp"
        android:text="9"
        android:textColor="@color/mainGreen"
        android:textSize="12dp"
        android:textStyle="bold"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_promise_able_member"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/tv_able_friend_title"
        app:layout_constraintTop_toBottomOf="@id/tv_able_friend_title"
        tools:listitem="@layout/item_promise_member" />

    <TextView
        android:id="@+id/tv_unable_friend_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="불가능한 친구"
        android:textStyle="bold"
        android:textSize="12dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/tv_promise_time"
        app:layout_constraintTop_toBottomOf="@id/recyclerview_promise_able_member"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tv_unable_friend_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tv_unable_friend_title"
        app:layout_constraintTop_toTopOf="@id/tv_unable_friend_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_unable_friend_title"
        android:layout_marginStart="4dp"
        android:text="9"
        android:textColor="@color/mainRed"
        android:textSize="12dp"
        android:textStyle="bold"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_promise_unable_member"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_unable_friend_title"
        app:layout_constraintStart_toStartOf="@id/tv_unable_friend_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="18dp"
        tools:listitem="@layout/item_promise_member"/>







</androidx.constraintlayout.widget.ConstraintLayout>