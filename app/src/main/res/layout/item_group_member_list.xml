<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="65dp">

    <!--    이미지의 테두리를 둥글게 적용시키기 위해 cardview를 사용하였음-->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_member_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="27dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="2dp">

        <ImageView
            android:id="@+id/iv_member_image"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/Gray1"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이자민"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/cardview_member_image"
        app:layout_constraintBottom_toBottomOf="@id/cardview_member_image"
        app:layout_constraintStart_toEndOf="@id/cardview_member_image"
        android:layout_marginStart="16dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>