<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_calendar_date"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/item_calendar_date_text"
        android:layout_width="40dp"
        android:layout_height="32dp"
        android:fontFamily="@font/pretendard_regular_400"
        android:gravity="bottom|center"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/list_calendar_todo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/transparent"
        android:divider="@drawable/shape_divider"
        android:dividerHeight="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_calendar_date_text"
        tools:listitem="@layout/item_calendar_date_todo" />

</androidx.constraintlayout.widget.ConstraintLayout>