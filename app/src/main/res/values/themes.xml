<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Promi" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/mainGreen</item>
        <item name="android:timePickerStyle">@style/MyTimePickerTheme</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

        <!-- No Title Bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- white status bar -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorPrimary">@color/mainGreen</item>

        <item name="colorControlActivated">@color/mainGreen</item> <!-- 선택됐을 때의 색상 -->
        <item name="colorControlNormal">@color/white</item> <!-- 기본 상태의 색상 -->
    </style>

    <style name="MyTimePickerTheme" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_top_radius30</item>
    </style>

    <!-- customize date range picker -->
    <style name="Widget.MaterialComponents.MaterialCalendar.HeaderLayout" parent="android:Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="Widget.MaterialComponents.MaterialCalendar.DayOfWeekLabel" parent="">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.MaterialComponents.MaterialCalendar.Day.Today">
        <item name="itemTextColor">?attr/colorPrimary</item>
    </style>

    <style name="Base.Widget.MaterialComponents.MaterialCalendar.NavigationButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog.Flush">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/mainBlack</item>
        <item name="iconTint">@color/material_on_surface_emphasis_medium</item>
        <item name="android:layout_marginBottom">21dp</item>
    </style>
</resources>